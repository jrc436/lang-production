package ar.xmlparser;

import java.io.File;
import java.util.Scanner;

public class Client {

	/**
	 * @param args
	 * @throws Exception 
	 */
	public static void main(String[] args) throws Exception {
		System.out.println(System.getProperty("os.arch"));
		System.out.println(Runtime.getRuntime().maxMemory());
		Scanner in = new Scanner(new File("/home/jrc/ap-largefiles/switchboard_boxer.xml"));		
		LineParser lp = new LineParser();
		lp.parse("<dr label=\"[]\" name=\"_G760679\">");
		int count = 0;
		long curTime = 0;
		long timeDiff = 0;
		long startTime = System.nanoTime();
		while (in.hasNextLine()) {
			count++;
			lp.lineNumber = count;
			lp.parse(in.nextLine());
			if (count % 1000000 == 0) {
				curTime = System.nanoTime();
				timeDiff = (curTime - startTime)/ (long)Math.pow(10, 9);
				System.out.print(count + ":"+timeDiff+"; ");
				startTime = curTime;
			}
		}
		
		in.close();
	
	}
}
