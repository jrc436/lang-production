package ar.xmlparser;

import java.io.File;
import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Client {

	/**
	 * @param args
	 * @throws Exception 
	 */
	public static void main(String[] args) throws Exception {
		Scanner in = new Scanner(new File("/home/jrc/ap-largefiles/switchboard_boxer.xml"));

		String stest =  "</dr>";
		String rtest = "^(?<start><[a-z]+(?<attrs> [a-zA-z:0-9]+=\"[a-zA-Z0-9.'_:\\-\\[\\]]+\")*>)?(?<value>[a-zA-Z0-9?':!+`\\$\\-.,]+)?(?<close></[a-z\\-]+>)?$";
		Pattern p = Pattern.compile(rtest);
		Matcher m = p.matcher(stest);
		while (m.find()) {
			System.out.println(m.group("attrs"));
			if (m.start(1) == -1) {
				break;
			}
			m.region(0, m.start(1));
		}
		System.out.println(stest.matches(rtest));
		
		/*
		LineParser lp = new LineParser();
		lp.parse("<dr label=\"[]\" name=\"_G760679\">");
		while (in.hasNextLine()) {
			lp.parse(in.nextLine());
		}
		*/
		in.close();
	}
}
